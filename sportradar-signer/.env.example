PORT=8080

# Sportradar
SPORTRADAR_API_KEY=your_sportradar_api_key_here

# Storage (S3 / R2)
BUCKET_NAME=betrix-temp
BUCKET_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret

# Mode: proxy (fetch -> upload -> presign) | direct (call provider sign API) | presign (if provider supports)
SIGN_MODE=proxy

# Limits
MAX_ASSET_MB=5
FETCH_TIMEOUT_MS=10000

# Security
ALLOWED_IPS=0.0.0.0/0
